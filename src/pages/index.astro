---
import Layout from '../layouts/Layout.astro';
import "../styles/global.css";

interface TabelaTitulo {
	titulo: string;
	slug: string;
	categoria: string;
}

const res = await fetch('/API/tableTitle');
const tabelaTitulo: TabelaTitulo[] = await res.json();
---

<Layout title="chefnacozinha.com">
	<div class="flex gap-5 flex-wrap w-400 m-auto">
		{tabelaTitulo.map(({slug, titulo}) => <div class="w-80 h-80 rounded outline-1 p-2 grow basis-80"><a href={slug}>{titulo}</a></div>)}
	</div>
</Layout>
