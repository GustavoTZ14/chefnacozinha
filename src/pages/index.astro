---
import Layout from '../layouts/Layout.astro';
import "../styles/global.css";

interface TabelaTitulo {
	slug: string;
	title: string;
}

const res = await fetch('http://localhost:4321/API/tableTitle')
const tabelaTitulo: TabelaTitulo[] = await res.json();
---

<Layout title="inicio">
	<div class="flex gap-5 flex-wrap">
		{tabelaTitulo.map(({slug, title}) => <div class="w-80 h-80 rounded outline-1 p-2 grow basis-80"><a href={slug}>{title}</a></div>)}
	</div>
</Layout>
