---
import "../styles/global.css";
---
<header class="flex p-5 justify-between">
	<div>
		<a href="/">LOGO</a>
	</div>
	<form class="outline-1 border-black-500 rounded w-100 flex" id="inForm">
		<input type="text" id="inSearch" placeholder="Pesquise por receitas ..." class="w-full p-1 outline-none">
		<button type="submit" id="btSearch" class="w-10">P</button>
	</form>
	<script>
	const frm = document.querySelector("form");

	frm.addEventListener("submit", (e) =>{
	  e.preventDefault();

	  const query = document.getElementById("inSearch").value.trim();

	  if(query){
	    window.location.href = `/search/?q=${encodeURIComponent(query)}`
	  }
	})
	</script>
</header>

